{% extends 'base.html.twig' %}

{% block title %}IB - Livre d'or
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="d-flex align-items-center">
			<i class="bi bi-book-half me-2"></i>
			Livre d'or
		</h1>
		{% if gifts|length > 0 %}
			{% for gift in gifts %}
				<div class="row my-5">
					{% if loop.index % 2 == 0 %}
						<div class="col text-center">
							{% if gift.file %}
								<img src="{{ asset('uploads/' ~ gift.file) }}" class="img-guestbook rounded" alt="">
							{% endif %}
						</div>
						<div class="col">
							<div>
								<h2 class="title-guestbook border-bottom">{{gift.author}}</h2>
								<small>Ta meilleure qualité pour moi est <strong>{{gift.quality}}</strong> !</small>
								<p class="mt-3">{{gift.description|nl2br}}</p>
							</div>
						</div>
					{% else %}
						<div class="col">
							<div>
								<h2 class="title-guestbook border-bottom">{{gift.author}}</h2>
								<small>Ta meilleure qualité pour moi est <strong>{{gift.quality}}</strong> !</small>
								<p class="mt-3">{{gift.description|nl2br}}</p>
							</div>
						</div>
						<div class="col text-center">
							{% if gift.file %}
								<img src="{{ asset('uploads/' ~ gift.file) }}" class="img-guestbook rounded" alt="">
							{% endif %}
						</div>
					{% endif %}
				</div>
			{% endfor %}
		{% else %}
			<p>Aucun commentaire, pour l'instant ! </p>
		{% endif %}
	</div>
{% endblock %}
